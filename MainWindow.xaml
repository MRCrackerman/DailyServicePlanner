<Window x:Class="_10Tim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_10Tim"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Icon="imgs/beb.ico"
        Title="Υπηρεσίες Φύλαξης Στρατοπαίδου 'Μαχαίρα'" Height="300" Width="450">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Σειρά για το κεντρικό περιεχόμενο -->
                <RowDefinition Height="*"/>   <!-- Κενό για να χωρίσουμε τα στοιχεία -->
                <RowDefinition Height="Auto"/> <!-- Σειρά για τα κείμενα στο κάτω μέρος -->
            </Grid.RowDefinitions>

            
            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image  Width="50" Height="50" Source="imgs/beb.png" Margin="0,0,30,0"/>
                    <TextBlock Text="691 ΒΕΒ" FontSize="25" FontWeight="Bold" TextAlignment="Center" Margin="0,10,0,0"/>
                    <Image  Width="50" Height="50" Source="imgs/YlikouPolemou.png"  Margin="30,0,0,0"/>
                </StackPanel>
                <TextBlock Text="Εφαρμογή δημιουργίας υπηρεσίων για το Στρατόπαιδου Μαχαίρα" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    TextAlignment="Center"
                    Margin="0,10,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                    <TextBlock Text="Δημιουργία υπηρεσιών όλου του μήνα" 
                        HorizontalAlignment="Center" 
                        TextAlignment="Center"
                        TextWrapping="Wrap"
                        Width="150"
                        />
                    <Button Name="RunMethodButton" Content="Φτιαξε μήνα" 
                        Width="100" Height="30" Margin="20,0,0,0"
                        Click="RunMethodButton_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- Κείμενα στο κάτω μέρος με στοίχιση στη μέση -->
            <StackPanel Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10">
                <TextBlock Text="Φτίαχτηκε απο ΣΤΡ Καραγιαννάκης και ΣΤΡ Παπαντώνης" TextAlignment="Center"/>
                <TextBlock Text="Αξιωματικός 2ο-3ο γραφείου ΕΠΧΙΑΣ Δ. Δοντζιου" TextAlignment="Center"/>
                <TextBlock Text="Υπο την Διοίκηση του ΣΧΗΣ Κ. ΜΠΑΜΠΑΛΙΟΥΤΑΣ" TextAlignment="Center" />
            </StackPanel>
        </Grid>
</Window>
